    @section scripts
{
        <script>
            $(document).ready(function () {
                var table = $("#courses");
                var DataTable = table.DataTable({
                    ajax: {
                        url: "/api/courses",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "title",
                            render: function (data, type, programme) {
                                return "<a href='/courses/edit/" + programme.id + "'>" + data + "</a>";
                            }
                        },
                        {
                            data: "department.name"
                        },
                        {
                            data: "courseCode"
                        },
                        {
                            data: "credits"
                        },
                        {
                            data: "Id",
                            render: function (data) {
                                return "<button class='btn-link js-deleted' data-courses-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });


                $("#courses").on("click", ".js-deleted", function () {
                    var button = $(this);
                    
                    bootbox.confirm("Are you sure you want to delete this course?", function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/courses/" + button.attr("data-courses-id"),
                                method: "DELETE",
                                success: function () {
                                    DataTable.row(button.parents("tr")).remove().draw();
                                }
                            });
                        }
                    });
                });
            });
        </script>
    }
